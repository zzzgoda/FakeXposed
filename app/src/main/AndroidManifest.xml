<manifest xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:dist="http://schemas.android.com/apk/distribution"
        package="com.sanfengandroid.datafilter">

    <uses-permission android:name="android.permission.INTERNET"/>
    <dist:module dist:instant="true" />
    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/Theme.XpFilter"
            android:name="com.sanfengandroid.datafilter.XpApplication">
        <activity android:name="com.sanfengandroid.datafilter.ui.activties.EditItemDialogActivity" />
        <activity android:name="com.sanfengandroid.datafilter.ui.activties.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
                android:name="com.sanfengandroid.datafilter.ui.activties.SettingsActivity"
                android:label="@string/settings" />

        <provider
                android:authorities="com.sanfengandroid.datafilter"
                android:name="com.sanfengandroid.datafilter.XPContentProvider"
                android:exported="true"
                android:process=":sp"
                android:enabled="true" />
        <activity android:name="com.sanfengandroid.fakeinterface.NativeTestActivity" />

        <meta-data
                android:name="xposedmodule"
                android:value="XpFilter" />
        <meta-data
                android:name="xposeddescription"
                android:value="过滤Xposed检测" />
        <meta-data
                android:name="xposedminversion"
                android:value="53" />
    </application>

</manifest>